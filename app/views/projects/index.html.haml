%h1 Projects

%table.table.table-striped.table-bordered
  %thead
    %tr
      %th Name
  %tbody
    - @projects.each do |p|
      %tr
        %td
          = link_to "##{p.pivotal_tracker_project_id}", project_path(p)
          = p.name
        %td
          %strong
            = is_admin? ? 'Workers' : 'Co-workers'
              
          - p.users.each do |user|
            - if user.now_working_on? p
              %strong
                = user.email + ','
            - else
              = user.email + ','
                
          
